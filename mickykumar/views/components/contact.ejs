<section id="contact" class="relative bg-white text-gray-800 font-sfpro px-6 md:px-12 py-20 md:py-28 rounded-3xl overflow-hidden">
  <div class="relative z-10 grid md:grid-cols-2 gap-16 items-start max-w-7xl mx-auto">

    <!-- 📅 Calendly Embed -->
    <div class="bg-gray-100 p-8 md:p-10 rounded-2xl border border-gray-300 shadow-lg">
      <h3 class="text-3xl md:text-4xl font-extrabold text-gray-900 mb-6">
        > Book a Call
      </h3>
      <div class="w-full h-[600px]">
        <iframe
          src="https://calendly.com/mickykumar"
          class="w-full h-full border border-gray-300 rounded-xl shadow-md"
          frameborder="0"
          scrolling="no"
          allowtransparency="true">
        </iframe>
      </div>
    </div>

    <!-- 🗺️ Info Block with Supported Region Pins -->
    <div class="relative bg-white border border-gray-300 rounded-2xl p-8 md:p-10 shadow-lg font-mono text-black text-base leading-relaxed">
      <div class="terminal-log space-y-4">
        <p class="text-black">$ <span class="font-bold">Connecting</span> to Micky...</p>
        <p class="text-black">&gt; Syncing <span class="font-semibold">Availability</span> → <span class="font-semibold">24/7 Online</span></p>
        <p class="text-black">&gt; Supported <span class="font-semibold">Regions</span>:</p>
        <ul class="pl-5  space-y-1 text-black">
          <li>📍 <strong>Canada</strong> 🇨🇦</li>
          <li>📍 <strong>USA</strong> 🇺🇸</li>
          <li>📍 <strong>Brazil</strong> 🇧🇷</li>
          <li>📍 <strong>India</strong> 🇮🇳</li>
        </ul>
        <p class="text-black">&gt; Fetching <span class="font-semibold">Social Protocols</span>...</p>
        <div class="flex gap-6 mt-4 text-2xl text-black">
          <a href="<%= portfolioData.contact.linkedin %>" target="_blank" class="hover:text-blue-600 transition-transform hover:scale-110">
            <i class="fab fa-linkedin"></i>
          </a>
          <a href="<%= portfolioData.contact.github %>" target="_blank" class="hover:text-black transition-transform hover:scale-110">
            <i class="fab fa-github"></i>
          </a>
        </div>
        <p class="text-black font-bold mt-6">✅ Channel open — Booking ready.</p>
      </div>
    </div>
  </div>

  <!-- 🔲 Soft Grid Background -->
  <svg class="absolute inset-0 w-full h-full opacity-5 pointer-events-none" xmlns="http://www.w3.org/2000/svg">
    <defs>
      <pattern id="gridPatternLight" width="40" height="40" patternUnits="userSpaceOnUse">
        <path d="M40 0 L0 0 0 40" fill="none" stroke="#999" stroke-width="0.5" />
      </pattern>
    </defs>
    <rect width="100%" height="100%" fill="url(#gridPatternLight)" />
  </svg>
</section>
